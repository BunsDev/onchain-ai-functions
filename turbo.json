{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "format": {
      "inputs": [
        "src/**"
      ],
      "outputLogs": "new-only"
    },
    "check": {
      "dependsOn": [
        "format"
      ],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": [
        "check"
      ],
      "outputLogs": "new-only"
    },
    "start": {
      "dependsOn": [
        "build"
      ],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "src/**"
      ]
    }
  }
}