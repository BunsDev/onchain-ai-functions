{
  "extends": ["//"],
  "tasks": {
    "format": {
      "dependsOn": ["@onchain-ai/common#build"],
      "inputs": ["src/**"],
      "outputLogs": "new-only"
    },
    "start": {
      "dependsOn": ["check"],
      "cache": false,
      "persistent": true,
      "inputs": ["src/**"],
      "outputLogs": "new-only"
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["src/**"],
      "outputLogs": "new-only"
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true,
      "outputLogs": "new-only"
    }
  }
}
